<?php
// app/services/UsuarioService.php

class UsuarioService {
    private $usuarioModel;

    public function __construct() {
        $this->usuarioModel = new Usuario();
    }

    // Registrar un nuevo usuario
    public function registrarUsuario($nombre, $email, $password) {
        // L칩gica de negocio para validar datos o encriptar la contrase침a
        $hashedPassword = password_hash($password, PASSWORD_DEFAULT);

        // Crear un nuevo usuario en la base de datos
        return $this->usuarioModel->guardarUsuario($nombre, $email, $hashedPassword);
    }

    // Autenticar un usuario
    public function autenticarUsuario($email, $password) {
        $usuario = $this->usuarioModel->obtenerPorEmail($email);

        if ($usuario && password_verify($password, $usuario['password'])) {
            return $usuario; // Devuelve los datos del usuario si la autenticaci칩n es exitosa
        }

        return null; // Si no es v치lido, devuelve null
    }

    // Obtener datos del usuario por su ID
    public function obtenerUsuarioPorId($id) {
        return $this->usuarioModel->obtenerPorId($id);
    }
}
?>
